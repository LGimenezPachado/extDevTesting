{
  "name": "Haskell Dev",
  "image": "mcr.microsoft.com/devcontainers/haskell:latest",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "features": {
    "ghcup": {
      "version": "latest"
    }
  },
  "postCreateCommand": "cabal update && cabal build all"
}
